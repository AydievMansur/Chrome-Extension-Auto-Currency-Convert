{
  "manifest_version": 3,
  "name": "Currency Converter",
  "description": "Automatically convert currencies on any webpage",
  "version": "1.0.0",
  "icons": {
    "128": "assets/img/Menu.jpg"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/js/app.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://api.exchangerate-api.com/*",
    "<all_urls>"
  ]
}
